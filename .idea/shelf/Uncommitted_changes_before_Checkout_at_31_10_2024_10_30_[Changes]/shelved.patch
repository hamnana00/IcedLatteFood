   <div class=\"category-item\">\r\n                <img src=\"https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcReEmnFTPB1t-iUKY-oa3tHbu3fo9HqTS9jtoTP9hQFKeSBPSyuwmcs-4_FzFipsJk1O6k&usqp=CAU\" alt=\"Platos Principales\">\r\n                <button onclick=\"showProducts('platos')\">Platos Principales</button>\r\n            </div>\r\n\r\n            <div class=\"category-item\">\r\n                <img src=\"https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcReqgOsvolpj-4-_9VorGnrnOGTWMLE2Lvf6A&s\" alt=\"Ensaladas\">\r\n                <button onclick=\"showProducts('ensaladas')\">Ensaladas</button>\r\n            </div>\r\n\r\n        </div>\r\n    </section>\r\n\r\n    <!-- Sección de selección de productos -->\r\n    <section id=\"product-section\" class=\"section\">\r\n        <h2>Productos de la Categoría: <span id=\"selected-category\"></span></h2>\r\n        <div class=\"product-list\" id=\"product-list\">\r\n            <!-- Productos generados dinámicamente -->\r\n        </div>\r\n        <button onclick=\"showSection('category-section')\">Volver a Categorías</button>\r\n        <button onclick=\"showSection('checkout-section')\">Siguiente</button>\r\n    </section>\r\n\r\n    <!-- Sección del carrito y detalles del pedido -->\r\n    <section id=\"checkout-section\" class=\"section\">\r\n        <h2>Carrito de Compras</h2>\r\n        <div id=\"cart\"></div>\r\n        <p>Total: $<span id=\"total-price\">0</span></p>\r\n\r\n        <!-- Información del Cliente -->\r\n        <h2>Detalles del Cliente</h2>\r\n        <label>ID del Cliente:</label><input type=\"text\" id=\"customer-id\" required><br>\r\n        <label>Teléfono:</label><input type=\"text\" id=\"phone\" required><br>\r\n        <label>Dirección:</label><input type=\"text\" id=\"address\" required><br>\r\n\r\n        <!-- Método de Pago -->\r\n        <h3>Método de Pago</h3>\r\n        <div class=\"payment-option\">\r\n            <label><input type=\"radio\" name=\"payment-method\" value=\"Tarjeta\" required> Tarjeta <img src=\"https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQvYJvSumwD7Wfaf0aqtpdyZoC6DoZPeMhWig&s\" alt=\"Tarjeta\"></label>\r\n            <label><input type=\"radio\" name=\"payment-method\" value=\"Efectivo\"> Efectivo <img src=\"https://proinda.es/wp-content/uploads/como-aplicar.jpeg\" alt=\"Efectivo\"></label>\r\n            <label><input type=\"radio\" name=\"payment-method\" value=\"PayPal\"> PayPal <img src=\"https://res.cloudinary.com/helpmycash/image/upload/c_fill,w_1280,q_auto,f_auto/media/ebqn7uybzul8ydptd2pt\" alt=\"PayPal\"></label>\r\n        </div>\r\n        <button onclick=\"finalizeOrder()\">Finalizar Pedido</button>\r\n        <button onclick=\"showSection('product-section')\">Seguir Comprando</button>\r\n    </section>\r\n    <div id=\"notification\" class=\"notification\">Añadido al carrito con éxito</div>\r\n\r\n</div>\r\n\r\n<script>\r\n    // Datos de productos con imágenes\r\n    const products = {\r\n        postres: [\r\n            { name: 'Tarta de Chocolate', price: 5, image: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTUDT4nEL8Nklb8c_jinH7XoBWRN8kAwF3jxg&s' },\r\n            { name: 'Helado', price: 3, image: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRb2jM2_UoyoSt-OXHPZngr2swIPxYbrRipFw&s' },\r\n            { name: 'Pávlola', price: 4, image: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS4Xtj-dlnA3xPtXlXD0fAIK8xCyLDByryLAA&s' },\r\n            { name: 'El Milhojas', price: 6.99, image: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTtjch8QWJExSFaIV2N_8M6bKsXJVAR53_Eo00GWhrT1g_5zkDXO6PkhJKuh0aU2Joemhs&usqp=CAU' },\r\n            { name: 'Crepe', price: 5.99, image: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQYucxmzB9VbFeVgIj5HrxpQEMVObg14Pi2eQ&s' },\r\n            { name: 'Éclairs', price: 2, image: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTYhW0oXf8rYvd_2YKxIhT7jInPooFDJyqX-A&s' },\r\n\r\n        ],\r\n        bebidas: [\r\n        